<p id="notice"><%= notice %></p>

<h1>Programok</h1>

<table>
  <thead>
    <tr>
      <th>Név</th>
      <th>Szervező</th>
      <th>Dátum</th>
      <th>Tartalom</th>
      <th>Döntés</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.title %></td>
        <td><%= program.owner %></td>
        <td><%= program.date %></td>
        <td><%= program.content %></td>
        <td><%= program.decision %></td>
        <td class="no-print"><%= link_to 'Olvas', program %></td>
        <td class="no-print"><%= link_to 'Átír', edit_program_path(program) %></td>
        <td class="no-print"><%= link_to 'Töröl', program, method: :delete, data: { confirm: 'Biztos törlöd?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Új Program', new_program_path,  class: 'btn btn-default btn-info no-print' %>
