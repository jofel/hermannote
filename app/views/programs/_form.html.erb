<%= form_for(program) do |f| %>
  <% if program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(program.errors.count, "error") %> prohibited this program from being saved:</h2>

      <ul>
      <% program.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Név" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :owner, "Szervező" %>
    <%= f.text_field :owner %>
  </div>

  <div class="field">
    <!-- <%= link_to "Refresh", "" %> -->
    <%= f.label :date, "Dátum" %>
    <%= f.text_field :date , :class => 'datepicker' %>
  </div>

  <div class="field">
    <%= f.label :content, "Tartalom"%>
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label :decision, "Döntés" %>
    <%= f.text_area :decision %>
  </div>

  <div class="actions">
    <%= f.submit  'Mentés', class: 'btn btn-success' %>
  </div>
<% end %>
